<Window x:Class="DirectorWorkTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectorWorkTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="НайтиКино" FontSize="25" FontWeight="UltraBold" Foreground="Orange"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Жанры" FontSize="15" Foreground="White"/>
            <ComboBox/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Frame x:Name="Mainframe">
                
            </Frame>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Horizontal">
            <TextBlock Text="NIckname" Foreground="White"/>
            <Image/>
        </StackPanel>
    </Grid>
</Window>
